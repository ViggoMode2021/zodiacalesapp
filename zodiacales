def eliminar():
    my_label.config(' ')
    photo_label.config(' ')

drop = OptionMenu(root, clicked, 'sagitario', 'escorpio', 'capricornio', 'acuario', 'piscis', 'aries', 'tauro', 'géminis', 'cáncer', 'leo', 'virgo', 'libra')
